{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "name": "Cyber Neon",
    "author": "Dylan Reece",
    "themes": [
        {
            "name": "Cyber Neon",
            "appearance": "dark",
            "style": {
                "background": "#000011",
                "foreground": "#e0f0ff",
                "editor.background": "#000011",
                "editor.foreground": "#e0f0ff",
                "editor.line_number": "#3344aa",
                "editor.active_line_number": "#00ffff",
                "editor.active_line.background": "#000a1a",
                "editor.gutter.background": "#000011",
                "border": "#1a2244",
                "border.variant": "#000a1a",
                "text": "#e0f0ff",
                "text.muted": "#5577cc",
                "text.placeholder": "#3344aa",
                "text.accent": "#00ffff",
                "surface.background": "#000008",
                "elevated_surface.background": "#0a1122",
                "element.background": "#1a2244",
                "element.hover": "#223355",
                "element.active": "#2a4466",
                "element.selected": "#1a334d",
                "ghost_element.hover": "#223355",
                "ghost_element.selected": "#1a334d",
                "tab_bar.background": "#000011",
                "tab.inactive_background": "#000011",
                "tab.active_background": "#000a1a",
                "status_bar.background": "#000011",
                "title_bar.background": "#000011",
                "panel.background": "#000008",
                "toolbar.background": "#000011",
                "scrollbar.thumb.background": "#1a2244",
                "scrollbar.track.background": "#000011",
                "error": "#ff0055",
                "error.background": "#3d001a",
                "warning": "#ffaa00",
                "warning.background": "#3d2200",
                "info": "#00aaff",
                "info.background": "#00223d",
                "success": "#00ff88",
                "success.background": "#003d22",
                "modified": "#ffaa00",
                "created": "#00ff88",
                "deleted": "#ff0055",
                "conflict": "#ff5500",
                "ignored": "#3344aa",
                "syntax": {
                    "comment": {
                        "color": "#445588",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#556699",
                        "font_style": "italic"
                    },
                    "constant": {
                        "color": "#ff00ff"
                    },
                    "constant.builtin": {
                        "color": "#ff00aa"
                    },
                    "constructor": {
                        "color": "#00ffff"
                    },
                    "function": {
                        "color": "#00ffff",
                        "font_weight": 700
                    },
                    "keyword": {
                        "color": "#ff0088",
                        "font_weight": 700
                    },
                    "number": {
                        "color": "#ff00aa"
                    },
                    "operator": {
                        "color": "#00ffdd"
                    },
                    "property": {
                        "color": "#00ccff"
                    },
                    "punctuation": {
                        "color": "#6699ff"
                    },
                    "punctuation.bracket": {
                        "color": "#00ffdd"
                    },
                    "punctuation.delimiter": {
                        "color": "#6699ff"
                    },
                    "string": {
                        "color": "#00ff88"
                    },
                    "string.escape": {
                        "color": "#ff00aa"
                    },
                    "string.regex": {
                        "color": "#00ffff"
                    },
                    "tag": {
                        "color": "#ff0088"
                    },
                    "type": {
                        "color": "#ffff00"
                    },
                    "variable": {
                        "color": "#e0f0ff"
                    },
                    "variable.special": {
                        "color": "#ff0055"
                    }
                }
            }
        }
    ]
}
