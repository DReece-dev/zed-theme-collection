{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "name": "Neon Horizon",
    "author": "Dylan Reece",
    "themes": [
        {
            "name": "Neon Horizon",
            "appearance": "dark",
            "style": {
                "background": "#08080f",
                "foreground": "#f0f0ff",
                "editor.background": "#08080f",
                "editor.foreground": "#f0f0ff",
                "editor.line_number": "#4040aa",
                "editor.active_line_number": "#8888ff",
                "editor.active_line.background": "#0d0d1a",
                "editor.gutter.background": "#08080f",
                "border": "#1a1a3d",
                "border.variant": "#0d0d1a",
                "text": "#f0f0ff",
                "text.muted": "#7777cc",
                "text.placeholder": "#4040aa",
                "text.accent": "#00ddff",
                "surface.background": "#050508",
                "elevated_surface.background": "#0f0f1a",
                "element.background": "#1a1a3d",
                "element.hover": "#22224d",
                "element.active": "#2a2a5d",
                "element.selected": "#1a1a4d",
                "ghost_element.hover": "#22224d",
                "ghost_element.selected": "#1a1a4d",
                "tab_bar.background": "#08080f",
                "tab.inactive_background": "#08080f",
                "tab.active_background": "#0d0d1a",
                "status_bar.background": "#08080f",
                "title_bar.background": "#08080f",
                "panel.background": "#050508",
                "toolbar.background": "#08080f",
                "scrollbar.thumb.background": "#1a1a3d",
                "scrollbar.track.background": "#08080f",
                "error": "#ff0044",
                "error.background": "#3d0011",
                "warning": "#ffaa00",
                "warning.background": "#3d2200",
                "info": "#00aaff",
                "info.background": "#00223d",
                "success": "#00ff88",
                "success.background": "#003d22",
                "modified": "#ffaa00",
                "created": "#00ff88",
                "deleted": "#ff0044",
                "conflict": "#ff5500",
                "ignored": "#4040aa",
                "syntax": {
                    "comment": {
                        "color": "#5555aa",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#6666bb",
                        "font_style": "italic"
                    },
                    "constant": {
                        "color": "#ff00ff"
                    },
                    "constant.builtin": {
                        "color": "#ff00aa"
                    },
                    "constructor": {
                        "color": "#00ffff"
                    },
                    "function": {
                        "color": "#00ffff",
                        "font_weight": 700
                    },
                    "keyword": {
                        "color": "#ff0099",
                        "font_weight": 700
                    },
                    "number": {
                        "color": "#ff00aa"
                    },
                    "operator": {
                        "color": "#00ffdd"
                    },
                    "property": {
                        "color": "#00ccff"
                    },
                    "punctuation": {
                        "color": "#7799ff"
                    },
                    "punctuation.bracket": {
                        "color": "#00ffdd"
                    },
                    "punctuation.delimiter": {
                        "color": "#7799ff"
                    },
                    "string": {
                        "color": "#00ff99"
                    },
                    "string.escape": {
                        "color": "#ff00aa"
                    },
                    "string.regex": {
                        "color": "#00ffff"
                    },
                    "tag": {
                        "color": "#ff0099"
                    },
                    "type": {
                        "color": "#ffff00"
                    },
                    "variable": {
                        "color": "#f0f0ff"
                    },
                    "variable.special": {
                        "color": "#ff0044"
                    }
                }
            }
        }
    ]
}
