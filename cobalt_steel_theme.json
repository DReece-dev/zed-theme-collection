{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "name": "Cobalt Steel",
    "author": "Dylan Reece",
    "themes": [
        {
            "name": "Cobalt Steel",
            "appearance": "dark",
            "style": {
                "background": "#0d1418",
                "foreground": "#dde8f0",
                "editor.background": "#0d1418",
                "editor.foreground": "#dde8f0",
                "editor.line_number": "#3d4d5d",
                "editor.active_line_number": "#7799bb",
                "editor.active_line.background": "#111a1f",
                "editor.gutter.background": "#0d1418",
                "border": "#1a2a35",
                "border.variant": "#111a1f",
                "text": "#dde8f0",
                "text.muted": "#6d8899",
                "text.placeholder": "#3d4d5d",
                "text.accent": "#4488bb",
                "surface.background": "#080f13",
                "elevated_surface.background": "#131f26",
                "element.background": "#1a2a35",
                "element.hover": "#223544",
                "element.active": "#2a4053",
                "element.selected": "#1a3344",
                "ghost_element.hover": "#223544",
                "ghost_element.selected": "#1a3344",
                "tab_bar.background": "#0d1418",
                "tab.inactive_background": "#0d1418",
                "tab.active_background": "#111a1f",
                "status_bar.background": "#0d1418",
                "title_bar.background": "#0d1418",
                "panel.background": "#080f13",
                "toolbar.background": "#0d1418",
                "scrollbar.thumb.background": "#1a2a35",
                "scrollbar.track.background": "#0d1418",
                "error": "#ff4466",
                "error.background": "#3d1a22",
                "warning": "#ffbb55",
                "warning.background": "#3d2a11",
                "info": "#4488bb",
                "info.background": "#11223d",
                "success": "#55ff88",
                "success.background": "#113d22",
                "modified": "#ffbb55",
                "created": "#55ff88",
                "deleted": "#ff4466",
                "conflict": "#ff8855",
                "ignored": "#3d4d5d",
                "syntax": {
                    "comment": {
                        "color": "#4d6677",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#5d7788",
                        "font_style": "italic"
                    },
                    "constant": {
                        "color": "#77aacc"
                    },
                    "constant.builtin": {
                        "color": "#5588bb"
                    },
                    "constructor": {
                        "color": "#6699cc"
                    },
                    "function": {
                        "color": "#6699cc",
                        "font_weight": 700
                    },
                    "keyword": {
                        "color": "#5599dd",
                        "font_weight": 700
                    },
                    "number": {
                        "color": "#5588bb"
                    },
                    "operator": {
                        "color": "#88bbdd"
                    },
                    "property": {
                        "color": "#99ccee"
                    },
                    "punctuation": {
                        "color": "#99bbcc"
                    },
                    "punctuation.bracket": {
                        "color": "#88bbdd"
                    },
                    "punctuation.delimiter": {
                        "color": "#99bbcc"
                    },
                    "string": {
                        "color": "#aaddee"
                    },
                    "string.escape": {
                        "color": "#5588bb"
                    },
                    "string.regex": {
                        "color": "#6699cc"
                    },
                    "tag": {
                        "color": "#5599dd"
                    },
                    "type": {
                        "color": "#88ccee"
                    },
                    "variable": {
                        "color": "#dde8f0"
                    },
                    "variable.special": {
                        "color": "#ff4466"
                    }
                }
            }
        }
    ]
}
